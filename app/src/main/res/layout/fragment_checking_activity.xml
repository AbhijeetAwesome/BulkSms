<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sphere.BulkSms.checking_activityFragment"
    tools:showIn="@layout/activity_checking">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Check the values"
                android:textSize="24dp"
                android:gravity="center_horizontal"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:textColor="#212121"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Starting phone Number"
                android:textSize="18dp"
                android:gravity="center_horizontal"
                android:paddingBottom="8dp"
                android:textColor="#000000"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Please enter the number"
                android:id="@+id/startNum"
                android:textColor="#727272"
                android:textSize="14dp"
                android:gravity="center_horizontal"
                android:paddingBottom="12dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ending phone Number"
                android:textSize="18dp"
                android:gravity="center_horizontal"
                android:paddingBottom="8dp"
                android:textColor="#000000"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Please enter the number"
                android:id="@+id/endNum"
                android:textColor="#727272"
                android:textSize="14dp"
                android:gravity="center_horizontal"
                android:paddingBottom="12dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total Number of sms"
                android:textSize="18dp"
                android:gravity="center_horizontal"
                android:paddingBottom="8dp"
                android:textColor="#000000"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/totalSms"
                android:textColor="#727272"
                android:textSize="14dp"
                android:gravity="center_horizontal"
                android:paddingBottom="12dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total time to send"
                android:textSize="18dp"
                android:gravity="center_horizontal"
                android:paddingBottom="8dp"
                android:textColor="#000000"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Please enter the number"
                android:id="@+id/timeToSend"
                android:textColor="#727272"
                android:textSize="14dp"
                android:gravity="center_horizontal"
                android:paddingBottom="12dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="---Message to broadcast--->"
                android:textSize="18dp"
                android:gravity="center_horizontal"
                android:paddingBottom="8dp"
                android:textColor="#000000"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/msgToBroadcast"
                android:textColor="#727272"
                android:textSize="14dp"
                android:paddingBottom="12dp"/>



        </LinearLayout>

    </ScrollView>

</FrameLayout>
